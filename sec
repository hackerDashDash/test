function secureCall(closure, ...)
    local env = getfenv(1)
    local renv = getrenv()
    local results
    
    setfenv(1, setmetatable({ script = script }, {
        __index = renv
    }))

    results = (syn and { syn.secure_call(closure, control, ...) }) or { closure(...) }

    setfenv(1, env)

    return unpack(results)
end
